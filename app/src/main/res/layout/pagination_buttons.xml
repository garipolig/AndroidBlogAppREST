<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shrinkColumns="*"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_span="4"
                android:background="@android:color/darker_gray"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/buttonFirstPage"
                android:layout_width="93dp"
                android:layout_height="57dp"
                android:layout_weight="1"
                android:layout_column="0"
                android:text="@string/button_first_page"
                style="?android:attr/borderlessButtonStyle"
                android:enabled="false"/>

            <Button
                android:id="@+id/buttonPrevPage"
                android:layout_width="93dp"
                android:layout_height="57dp"
                android:layout_weight="1"
                android:layout_column="1"
                android:text="@string/button_prev_page"
                style="?android:attr/borderlessButtonStyle"
                android:enabled="false"/>

            <Button
                android:id="@+id/buttonNextPage"
                android:layout_width="93dp"
                android:layout_height="57dp"
                android:layout_weight="1"
                android:layout_column="2"
                android:text="@string/button_next_page"
                style="?android:attr/borderlessButtonStyle"
                android:enabled="false"/>

            <Button
                android:id="@+id/buttonLastPage"
                android:layout_width="93dp"
                android:layout_height="57dp"
                android:layout_weight="1"
                android:layout_column="3"
                android:text="@string/button_last_page"
                style="?android:attr/borderlessButtonStyle"
                android:enabled="false"/>

        </TableRow>

    </TableLayout>

</LinearLayout>