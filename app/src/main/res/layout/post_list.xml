<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="90dp">

    <TextView
        android:id="@+id/itemsListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/colorLightGrey"/>

    <ListView
        android:id="@+id/itemsListContent"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:layout_below="@id/itemsListTitle"
        android:background="@drawable/items_list_round_shape" />

    <TextView
        android:id="@+id/pageCounters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemsListContent"
        android:layout_alignParentEnd="true"
        android:textColor="@color/colorLightGrey"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingBottom="90dp"
        android:visibility="gone"/>

</RelativeLayout>